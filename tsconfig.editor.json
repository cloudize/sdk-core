{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./lib",
    "removeComments": true,
    "strict": true,
    "strictNullChecks": false,
    "target": "ES6",
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [
    "src",
    "tests"
  ]
}
